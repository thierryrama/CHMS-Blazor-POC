@inherits CultureChangeAwareComponent
@inject IStringLocalizer<SignedInUser> Loc

@* Set color to inherit so that it matches the theme of the container for the background and the text color. *@
@* Which is important for having the right text color for the background used for the theme. *@
<MudMenu Label="@DisplayName" Color="Color.Inherit"
         AnchorOrigin="Origin.BottomRight"
         StartIcon="@Icons.Filled.Person" EndIcon="@Icons.Filled.KeyboardArrowDown">
	<MudMenuItem Link="/accountSettings">
		<MudIcon Class="mud-float-left mr-2" Icon="@Icons.Material.Filled.AccountCircle"/>
		<MudText Inline="true">@Loc["AccountSettings"]</MudText>
	</MudMenuItem>
	<MudMenuItem Link="/logOff">
		<MudIcon Class="mud-float-left mr-2" Icon="@Icons.Material.Filled.Logout"/>
        <MudText Inline="true">@Loc["LogOff"]</MudText>
	</MudMenuItem>
</MudMenu>

@code {

	[Inject]
	private SignedInUserViewModel ViewModel { get; set; } = null!;

	private string DisplayName => $"{ViewModel.FirstName} {ViewModel.LastName}";
}